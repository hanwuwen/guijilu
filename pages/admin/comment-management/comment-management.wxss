/* comment-management.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.search-bar {
  display: flex;
  margin-bottom: 20rpx;
  gap: 15rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  background-color: #fff;
}

.search-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.comment-list {
  margin-bottom: 30rpx;
}

.comment-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.nickname {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 20rpx;
  color: #999;
}

.delete-btn {
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 22rpx;
  border: none;
}

.comment-content {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.content {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-word;
}

.comment-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #666;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.activity-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.like-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.label {
  color: #999;
}

.value {
  color: #666;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}