<!-- admin.wxml -->
<view class="admin-container">
  <view class="admin-header">
    <text class="admin-title">管理员中心</text>
    <text class="admin-subtitle">仅管理员可访问</text>
  </view>

  <view class="admin-menu">
    <view class="menu-section">
      <text class="section-title">用户管理</text>
      <view class="menu-item" bindtap="goToUserManagement">
        <text class="menu-icon">👥</text>
        <text class="menu-text">用户列表</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToUserReports">
        <text class="menu-icon">⚠️</text>
        <text class="menu-text">用户举报</text>
        <text class="menu-arrow">＞</text>
      </view>
    </view>

    <view class="menu-section">
      <text class="section-title">内容管理</text>
      <view class="menu-item" bindtap="goToActivityManagement">
        <text class="menu-icon">📅</text>
        <text class="menu-text">活动管理</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToCommentManagement">
        <text class="menu-icon">💬</text>
        <text class="menu-text">评论管理</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToChatManagement">
        <text class="menu-icon">💭</text>
        <text class="menu-text">聊天记录管理</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToFeedbackManagement">
        <text class="menu-icon">📝</text>
        <text class="menu-text">反馈管理</text>
        <text class="menu-arrow">＞</text>
      </view>
    </view>

    <view class="menu-section">
      <text class="section-title">内容审核</text>
      <view class="menu-item" bindtap="goToSensitiveWordManagement">
        <text class="menu-icon">🔒</text>
        <text class="menu-text">敏感词管理</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToModerationRulesManagement">
        <text class="menu-icon">📏</text>
        <text class="menu-text">审核规则管理</text>
        <text class="menu-arrow">＞</text>
      </view>
    </view>

    <view class="menu-section">
      <text class="section-title">系统设置</text>
      <view class="menu-item" bindtap="goToSystemSettings">
        <text class="menu-icon">⚙️</text>
        <text class="menu-text">系统配置</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="goToLogManagement">
        <text class="menu-icon">📋</text>
        <text class="menu-text">操作日志</text>
        <text class="menu-arrow">＞</text>
      </view>
      <view class="menu-item" bindtap="logout">
        <text class="menu-icon">🚪</text>
        <text class="menu-text">退出登录</text>
        <text class="menu-arrow">＞</text>
      </view>
    </view>
  </view>

  <view class="admin-footer">
    <text class="footer-text">城市漫游者 - 管理员中心</text>
    <text class="footer-version">版本 1.0.0</text>
  </view>
</view>