/* feedback-management.wxss */
.feedback-management-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.feedback-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-subtitle {
  font-size: 24rpx;
  color: #666;
}

.status-filter {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  background-color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  white-space: nowrap;
}

.filter-item.active {
  background-color: #1989fa;
  color: white;
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  min-width: 24rpx;
  text-align: center;
}

.feedback-list {
  margin-bottom: 30rpx;
}

.feedback-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.3s ease;
}

.feedback-item:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.feedback-item.unread {
  border-left: 8rpx solid #1989fa;
}

.feedback-header-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.feedback-time {
  font-size: 22rpx;
  color: #999;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-badge.pending {
  background-color: rgba(255, 145, 0, 0.1);
  color: #fa8c16;
}

.status-badge.read {
  background-color: rgba(0, 146, 207, 0.1);
  color: #13c2c2;
}

.status-badge.replied {
  background-color: rgba(52, 199, 89, 0.1);
  color: #52c41a;
}

.feedback-content {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.feedback-contact {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.contact-label {
  font-weight: 500;
  margin-right: 8rpx;
}

.contact-value {
  color: #1989fa;
}

.feedback-reply {
  font-size: 22rpx;
  color: #666;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reply-label {
  font-weight: 500;
  margin-right: 8rpx;
}

.reply-content {
  color: #333;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.pagination-info {
  font-size: 24rpx;
  color: #666;
}

.pagination-buttons {
  display: flex;
  gap: 15rpx;
}

.pagination-btn {
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  min-width: 120rpx;
}

.pagination-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.detail-content {
  background-color: white;
  border-radius: 16rpx;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.detail-close {
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
}

.detail-body {
  padding: 24rpx;
}

.detail-item {
  margin-bottom: 24rpx;
}

.detail-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
}

.detail-content-item {
  margin-bottom: 30rpx;
}

.detail-content-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.detail-content-text.reply-text {
  color: #1989fa;
}

.detail-footer {
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.footer-btn {
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 120rpx;
}

.footer-btn.primary {
  background-color: #1989fa;
  color: white;
}

.footer-btn.secondary {
  background-color: #f0f0f0;
  color: #333;
}

/* 回复弹窗 */
.reply-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.reply-content {
  background-color: white;
  border-radius: 16rpx;
  width: 90%;
  max-height: 70vh;
  overflow-y: auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.reply-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.reply-close {
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
}

.reply-form {
  padding: 24rpx;
}

.reply-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  resize: none;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 20rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #1989fa;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #c0c4cc;
}
