/* user-reports.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.filter-bar {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #1890ff;
  color: #fff;
}

.report-list {
  margin-bottom: 30rpx;
}

.report-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-info {
  display: flex;
  align-items: center;
}

.report-type {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.report-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.report-status.pending {
  background-color: #fff2e8;
  color: #fa8c16;
}

.report-status.processed {
  background-color: #f6ffed;
  color: #52c41a;
}

.report-status.rejected {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.report-time {
  font-size: 20rpx;
  color: #999;
}

.report-content {
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.report-reason {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.content-info {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
  word-break: break-word;
}

.report-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  min-width: 120rpx;
}

.action-btn.accept {
  background-color: #52c41a;
  color: #fff;
}

.action-btn.reject {
  background-color: #ff4d4f;
  color: #fff;
}

.report-processed {
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 20rpx;
  color: #999;
}

.processed-text {
  display: block;
  margin-bottom: 8rpx;
}

.processed-reason {
  display: block;
  margin-bottom: 8rpx;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}