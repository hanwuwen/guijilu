/* moderation-rules-management.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.form-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.input {
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.add-button {
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 24rpx;
  width: 100%;
  margin-top: 10rpx;
}

.list-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx 0 0 8rpx;
  padding: 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.search-button {
  background-color: #1890ff;
  color: #fff;
  border-radius: 0 8rpx 8rpx 0;
  padding: 0 30rpx;
  font-size: 24rpx;
}

.rule-list {
  margin-bottom: 20rpx;
}

.rule-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.rule-info {
  margin-bottom: 15rpx;
}

.rule-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.rule-pattern {
  font-size: 20rpx;
  color: #f5222d;
  background-color: #fff2f0;
  padding: 8rpx;
  border-radius: 6rpx;
  margin-bottom: 8rpx;
  display: block;
  word-break: break-all;
}

.rule-description {
  font-size: 20rpx;
  color: #666;
  display: block;
}

.rule-actions {
  display: flex;
  gap: 10rpx;
  justify-content: flex-end;
}

.edit-button {
  background-color: #faad14;
  color: #fff;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  min-width: 80rpx;
}

.delete-button {
  background-color: #f5222d;
  color: #fff;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  min-width: 80rpx;
}

.empty-list {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 24rpx;
}