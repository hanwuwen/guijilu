/* feedback.wxss */
.feedback-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.feedback-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-subtitle {
  font-size: 24rpx;
  color: #666;
}

.feedback-form {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.type-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.type-item {
  padding: 12rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #1989fa;
  background-color: rgba(25, 137, 250, 0.1);
  color: #1989fa;
}

.feedback-content {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  resize: none;
  box-sizing: border-box;
}

.placeholder-text {
  color: #999;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}

.contact-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #1989fa;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #c0c4cc;
}

.feedback-footer {
  text-align: center;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}