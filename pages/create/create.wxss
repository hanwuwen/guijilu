/* create.wxss */

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #555;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  resize: none;
}

/* 日期选择器 */
.date-picker {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 封面上传 */
.upload-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.cover-image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.upload-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #3498db;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 区域标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #555;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

/* 打卡地点列表 */
.checkpoint-list {
  margin-bottom: 24rpx;
}

.checkpoint-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.checkpoint-index {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #3498db;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.checkpoint-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.checkpoint-name {
  width: 100%;
  height: 60rpx;
  padding: 0 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.checkpoint-desc {
  width: 100%;
  height: 60rpx;
  padding: 0 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.location-btn {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ecf0f1;
  color: #333;
  border-radius: 25rpx;
  font-size: 22rpx;
  align-self: flex-start;
}

.location-text {
  font-size: 22rpx;
  color: #666;
  margin-top: 4rpx;
}

.delete-btn {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #e74c3c;
  color: #fff;
  border-radius: 25rpx;
  font-size: 22rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* 添加打卡地点按钮 */
.add-checkpoint-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ecf0f1;
  color: #3498db;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

/* 最大打卡地点提示 */
.max-checkpoints {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3498db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .upload-section {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .cover-image {
    width: 100%;
    height: 200rpx;
  }
  
  .upload-btn {
    width: 100%;
    margin-top: 16rpx;
  }
}