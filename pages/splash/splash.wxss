/* splash.wxss */
.splash-container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.splash-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

.splash-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 0 40rpx;
}

.splash-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.splash-subtitle {
  font-size: 32rpx;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 80rpx;
}

.start-button {
  width: 400rpx;
  height: 100rpx;
  background-color: #3498db;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  line-height: 100rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.start-button:hover {
  background-color: #2980b9;
  transform: scale(1.05);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.3);
}

.start-button::after {
  border-radius: 50rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 1.5s ease-in-out forwards;
  opacity: 0;
}

.fade-in-delay {
  animation: fadeIn 1.5s ease-in-out 0.5s forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.splash-content.fade-in-delay {
  transform: scale(1);
}