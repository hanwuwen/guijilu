/* chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 48px;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 16px;
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #333;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.placeholder {
  width: 32px;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
}

.empty-message {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200px;
  color: #999;
  font-size: 14px;
}

.message-item {
  margin-bottom: 20px;
}

.message-content {
  display: flex;
  align-items: flex-end;
}

.right-content {
  flex-direction: row-reverse;
}

.avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 8px;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.message-bubble {
  max-width: 70%;
  padding: 10px 14px;
  border-radius: 18px;
  word-break: break-word;
  line-height: 1.4;
}

.left-bubble {
  background-color: #fff;
  border-bottom-left-radius: 4px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.right-bubble {
  background-color: #07c160;
  color: #fff;
  border-bottom-right-radius: 4px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

/* 消息文本 */
.message-text {
  word-break: break-word;
  line-height: 1.4;
}

/* 消息图片 */
.message-image {
  width: 200px;
  height: 200px;
  border-radius: 8px;
}

/* 已读/未读状态 */
.read-status {
  font-size: 11px;
  margin: 0 4px;
  display: flex;
  align-items: flex-end;
  padding-bottom: 4px;
}

.read {
  color: #999;
}

.unread {
  color: #ccc;
}

.message-time {
  font-size: 11px;
  color: #999;
  text-align: center;
  margin-top: 4px;
}

.loading-more {
  text-align: center;
  padding: 10px 0;
  color: #999;
  font-size: 12px;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  padding: 8px 16px;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.input-tools {
  display: flex;
  margin-right: 8px;
}

.tool-btn {
  width: 36px;
  height: 36px;
  margin-right: 8px;
  background-color: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-icon {
  font-size: 20px;
}

.input {
  flex: 1;
  height: 36px;
  padding: 0 12px;
  background-color: #f5f5f5;
  border-radius: 18px;
  font-size: 14px;
}

.send-btn {
  width: 60px;
  height: 36px;
  margin-left: 12px;
  background-color: #07c160;
  color: #fff;
  border-radius: 18px;
  font-size: 14px;
  line-height: 36px;
  text-align: center;
}

/* 表情面板 */
.emoji-panel {
  padding: 16px;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.emoji-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
}

.emoji-item {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  cursor: pointer;
  border-radius: 8px;
  transition: background-color 0.2s;
}

.emoji-item:hover {
  background-color: #f5f5f5;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 4px;
}

::-webkit-scrollbar-track {
  background-color: transparent;
}

::-webkit-scrollbar-thumb {
  background-color: #e5e5e5;
  border-radius: 2px;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #d0d0d0;
}
