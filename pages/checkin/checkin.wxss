/* checkin.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 打卡地点信息 */
.checkpoint-info {
  margin-bottom: 16rpx;
}

.checkpoint-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.checkpoint-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 40rpx;
}

.checkpoint-location {
  display: block;
  font-size: 28rpx;
  color: #3498db;
  margin-bottom: 8rpx;
}

.checkpoint-address {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 36rpx;
}

/* 当前位置信息 */
.location-info {
  margin-bottom: 16rpx;
}

.location-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.location-address {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 36rpx;
}

.distance-info {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.distance-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.distance-status {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
}

.distance-status.valid {
  color: #27ae60;
}

.distance-status.invalid {
  color: #e74c3c;
}

/* 打卡表单 */
.checkin-note {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  resize: none;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

/* 图片上传 */
.upload-section {
  margin-top: 16rpx;
}

.upload-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.upload-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 100%;
  display: block;
}

.upload-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.upload-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}

.upload-add-icon {
  font-size: 48rpx;
  color: #ccc;
  margin-bottom: 8rpx;
}

.upload-add-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.checkin-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3498db;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
}

.checkin-btn:disabled {
  background-color: #bdc3c7;
  color: #ffffff;
}