/* certificate.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

/* 证书卡片 */
.certificate-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 64rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

/* 证书边框装饰 */
.certificate-card::before {
  content: '';
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.2);
  border-radius: 16rpx;
  pointer-events: none;
}

/* 证书头部 */
.certificate-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.certificate-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 16rpx;
}

.certificate-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  letter-spacing: 8rpx;
}

/* 证书内容 */
.certificate-content {
  text-align: center;
  margin-bottom: 64rpx;
}

.certificate-welcome {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.certificate-username {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.certificate-description {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.certificate-activity {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 32rpx;
}

.certificate-checkpoints {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.certificate-date {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 证书底部 */
.certificate-footer {
  text-align: center;
}

.certificate-seal {
  width: 192rpx;
  height: 192rpx;
  margin-bottom: 24rpx;
  opacity: 0.8;
}

.certificate-valid {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3498db;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
}

.share-btn {
  width: 100%;
  height: 88rpx;
  background-color: #27ae60;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ffffff;
  color: #666;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 2rpx solid #e0e0e0;
}

/* 活动信息卡片 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.activity-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
}
