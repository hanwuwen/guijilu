/* profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

/* 用户信息卡片 */
.user-card {
  background-color: #3498db;
  border-radius: 16rpx;
  padding: 48rpx;
  margin-bottom: 24rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(52, 152, 219, 0.3);
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.avatar-upload {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.user-info {
  text-align: center;
}

.user-header {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 0;
}

.level-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #999999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  animation: levelBadgeGlow 2s ease-in-out infinite alternate;
}

@keyframes levelBadgeGlow {
  from {
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  to {
    box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.4);
  }
}

.level-icon {
  font-size: 28rpx;
}

.level-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.level-number {
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
  background-color: rgba(0, 0, 0, 0.2);
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
}

.user-signature {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.user-city {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 24rpx;
}

/* 等级进度条 */
.level-progress {
  margin-top: 24rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.progress-percent {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.5s ease-out;
  background: linear-gradient(90deg, currentColor, rgba(255, 255, 255, 0.8));
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: progressShine 2s ease-in-out infinite;
}

@keyframes progressShine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 活动统计 */
.activity-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  resize: none;
  box-sizing: border-box;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3498db;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  margin-top: 16rpx;
}

/* 菜单列表 */
.menu-list {
  border-top: 1rpx solid #f0f0f0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 成就统计 */
.achievement-stats {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.achievement-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
}

.achievement-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.achievement-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #e67e22;
  margin-bottom: 8rpx;
}

.achievement-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 成就列表 */
.achievement-list {
  margin-top: 16rpx;
}

.achievement-card {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #3498db;
}

.achievement-card-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.achievement-card-content {
  flex: 1;
}

.achievement-card-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.achievement-card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.achievement-card-date {
  display: block;
  font-size: 20rpx;
  color: #999;
}

.empty-achievements {
  padding: 60rpx 20rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
}